<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for an item in the ListView of the Music Selection Activity. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_selection_item_layout"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight" >

    <TextView
        android:id="@+id/music_selection_item_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="26dp"
        android:drawableLeft="@drawable/ic_launcher"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        style="@android:style/TextAppearance.Medium" />
    <TextView
        android:id="@+id/music_selection_item_arrow_textview"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        style="@android:style/TextAppearance.Medium"
        android:text="@string/music_selection_item_arrow" />

</RelativeLayout>
